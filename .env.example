# OAuth 2.0 Lab - Environment Variables Template
# 复制此文件为 .env 并填入实际值

# ==========================================
# Frontend (Next.js)
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_JAVA_SERVER=http://localhost:8080
NEXT_PUBLIC_PYTHON_SERVER=http://localhost:8000
NEXT_PUBLIC_NODEJS_SERVER=http://localhost:3001
NEXT_PUBLIC_PHP_SERVER=http://localhost:8888
NEXT_PUBLIC_GO_SERVER=http://localhost:9000

# ==========================================
# Java Server (Spring Boot)
# ==========================================
JAVA_SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
DATABASE_URL=jdbc:sqlite:./data/oauth2.db

# OAuth2 Configuration
OAUTH2_CLIENT_ID=demo-client
OAUTH2_CLIENT_SECRET=demo-secret
OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# ==========================================
# Python Server (FastAPI)
# ==========================================
PYTHON_SERVER_PORT=8000
ENVIRONMENT=development
DATABASE_URL=sqlite:///./data/oauth2.db

# OAuth2 Configuration
OAUTH2_CLIENT_ID=demo-client
OAUTH2_CLIENT_SECRET=demo-secret
OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# ==========================================
# Node.js Server (Express)
# ==========================================
NODEJS_SERVER_PORT=3001
NODE_ENV=development
NODEJS_DATABASE_URL=./data/oauth2.db

# OAuth2 Configuration
NODEJS_OAUTH2_CLIENT_ID=demo-client
NODEJS_OAUTH2_CLIENT_SECRET=demo-secret
NODEJS_OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# Session Secret
SESSION_SECRET=your-session-secret-here

# ==========================================
# PHP Server (Laravel/Slim)
# ==========================================
PHP_SERVER_PORT=8888
APP_ENV=development
PHP_DATABASE_URL=sqlite:///app/data/oauth2.db

# OAuth2 Configuration
PHP_OAUTH2_CLIENT_ID=demo-client
PHP_OAUTH2_CLIENT_SECRET=demo-secret
PHP_OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# ==========================================
# Go Server (Gin)
# ==========================================
GO_SERVER_PORT=9000
GO_ENV=development
GO_DATABASE_URL=./data/oauth2.db

# OAuth2 Configuration
GO_OAUTH2_CLIENT_ID=demo-client
GO_OAUTH2_CLIENT_SECRET=demo-secret
GO_OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# ==========================================
# Security Scanner
# ==========================================
SCANNER_PORT=5000
SCANNER_ENV=development

# ==========================================
# JWT Configuration (共享)
# ==========================================
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=3600

# ==========================================
# Database Configuration
# ==========================================
DB_TYPE=sqlite
DB_PATH=./data/oauth2.db
